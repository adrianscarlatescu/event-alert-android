<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/itemEventNotificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/itemEventNotificationThumbnailSeverityCardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="0dp"
            app:contentPadding="10dp">

            <ImageView
                android:id="@+id/itemEventNotificationThumbnailTypeImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/item_placeholder" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemEventNotificationTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="16sp"
                tools:text="Type example" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemEventNotificationSeverityColorCardView"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp" />

                <TextView
                    android:id="@+id/itemEventNotificationSeverityTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textSize="@dimen/item_event_text_size"
                    tools:text="Severity example" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemEventNotificationStatusColorCardView"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp" />

                <TextView
                    android:id="@+id/itemEventNotificationStatusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textSize="@dimen/item_event_text_size"
                    tools:text="Status example" />
            </LinearLayout>

            <TextView
                android:id="@+id/itemEventNotificationCreatedAtTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="14sp"
                tools:text="25/08/2020 21:53" />

            <TextView
                android:id="@+id/itemEventNotificationImpactRadiusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="16sp"
                tools:text="15 km impact radius" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>